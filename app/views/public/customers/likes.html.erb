<div class="cover-likes">
    <div class="container">
        <div class="row justify-content-center">
            <h1 class="font-weight-normal mt-3">いいねした投稿一覧</h1>
            <div class="row justify-content-center">
              <% @like_posts.each do |post|%>
              <i class="fa fa-heart unlike-btn"></i>
              <%= link_to post.customer.name, customer_path(post.customer.id) %>
              <%=post.post_title %>
              <% if post.image.attached? %>
              <%= image_tag post.image, size: "100x120" %>
              <% else %>
              <%= image_tag 'no_image', size: "100x120" %>
              <% end %>
            <% end %>
            </div>
        </div>
    </div>
</div>

