<div class="cover-new">
  <div class="container">
    <div class="row justify-content-center">
     <h1 class="font-weight-normal mt-3">新規投稿</h1>
    </div>
    <div class="row justify-content-center">
     <%= form_with model: @post do |f| %>
     <div class="form-group">
      <label class="form-label">サッカーグループ名</label><br>
      <%= f.select :soccergroup_id, @soccergroups %>
     </div>

     <div class="form-group">
      <label class="form-label">投稿タイトル</label><br>
      <%= f.text_field :post_title %>
     </div>
      
     <div class="form-group">
      <label class="form-label">投稿本文</label><br>
      <%= f.text_area :body, rows: 3, class: "form-control" %>
     </div>
     
     <div class="form-group">
      <label class="form-label">画像</label><br>
      <%= f.file_field :image, accept: "image/*" %>
     </div>
     
     <%= f.submit '投稿する', class: "btn btn-success" %>
    <% end %>
    </div>
  </div>
</div>
 