<% if post.liked_by?(current_customer) %>
    <%= link_to post_likes_path(post.id), method: :delete, remote: true do %>
    <i class="fas fa-heart fa-lg" style="color:red;"><%= post.likes.count %></i>
    <% end %>
<% else %>
    <%= link_to post_likes_path(post.id), method: :post, remote: true do %>
      <i class="fas fa-heart fa-lg"><%= post.likes.count %></i>
    <% end %>
<% end %>