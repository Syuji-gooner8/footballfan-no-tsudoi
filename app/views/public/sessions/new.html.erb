<div class="box">
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h1>ログイン</h1>
    <div class="box-email">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "パスワード" %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <div class="box-login">
      <%= f.submit "ログイン" %>
    </div>

      <h5 class="mt-5">ゲストログインはこちらから</h5>
  　　<div class="btn-wrapper col-5 mx-auto">
        <div class="row">
    　　　<%= link_to "ゲストログイン（閲覧用）", customers_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
  　　  </div>
  　　</div>
    <% end %>
    <div class="box-newusr">
        <p><span>------------</span>新しいお客様ですか？<span>------------</span></p>
    <%= render "public/shared/links" %>
    </div>
  </div>
</div>